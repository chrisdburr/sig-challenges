{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI-Enabled Digital Twin Assurance Challenges",
  "description": "Schema for the AI-Enabled Digital Twin Assurance Challenges data",
  "type": "object",
  "required": ["challenges"],
  "properties": {
    "challenges": {
      "type": "array",
      "description": "List of AI-DT assurance challenges",
      "items": {
        "type": "object",
        "required": [
          "number", 
          "title", 
          "description", 
          "sector", 
          "significance", 
          "complexity", 
          "readiness",
          "capability1"
        ],
        "properties": {
          "number": {
            "type": "integer",
            "description": "Unique identifier for the challenge",
            "minimum": 1
          },
          "title": {
            "type": "string",
            "description": "Short title for the challenge"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the challenge"
          },
          "sector": {
            "type": "string",
            "description": "Industry sector the challenge belongs to",
            "enum": [
              "Energy & Utilities",
              "Health & Well-Being",
              "Manufacturing",
              "Natural Environment",
              "Transportation & Supply Chains",
              "Built Environment",
              "Government",
              "Cross-Cutting"
            ]
          },
          "significance": {
            "type": "integer",
            "description": "Rating for the potential impact on digital twin ecosystem (1-3 scale)",
            "minimum": 1,
            "maximum": 3
          },
          "complexity": {
            "type": "integer",
            "description": "Rating for technical and organizational difficulty (1-3 scale)",
            "minimum": 1,
            "maximum": 3
          },
          "readiness": {
            "type": "integer",
            "description": "Rating for current level of community preparedness (1-3 scale)",
            "minimum": 1,
            "maximum": 3
          },
          "capability1": {
            "type": "string",
            "description": "Primary AI-DT capability associated with the challenge",
            "enum": [
              "system_modelling",
              "data_integration",
              "realtime_monitoring",
              "predictive_analytics",
              "anomaly_detection",
              "optimisation",
              "decision_support",
              "visual_spatial",
              "human_twin_interaction",
              "twin_orchestration",
              "knowledge_representation",
              "security_privacy",
              "vvuq"
            ]
          },
          "capability2": {
            "type": "string",
            "description": "Secondary AI-DT capability associated with the challenge",
            "enum": [
              "system_modelling",
              "data_integration",
              "realtime_monitoring",
              "predictive_analytics",
              "anomaly_detection",
              "optimisation",
              "decision_support",
              "visual_spatial",
              "human_twin_interaction",
              "twin_orchestration",
              "knowledge_representation",
              "security_privacy",
              "vvuq"
            ]
          },
          "capability3": {
            "type": "string",
            "description": "Tertiary AI-DT capability associated with the challenge",
            "enum": [
              "system_modelling",
              "data_integration",
              "realtime_monitoring",
              "predictive_analytics",
              "anomaly_detection",
              "optimisation",
              "decision_support",
              "visual_spatial",
              "human_twin_interaction",
              "twin_orchestration",
              "knowledge_representation",
              "security_privacy",
              "vvuq"
            ]
          }
        }
      }
    }
  }
}